    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: ConsoleApp",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/TextPacketBuilder/ConsoleApp.csproj",
            "launchConfigurationId": "TargetFramework=;TextPacketBuilder"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/TextPacketBuilder/bin/Debug/net8.0/ConsoleApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TextPacketBuilder",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Containers: .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/TextPacketBuilder/ConsoleApp.csproj"
            }
        }
    ],
}